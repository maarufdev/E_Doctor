<link rel="stylesheet" href="~/features/admin/diagnosis/css/diagnosis.css" asp-append-version="true" />

<div id="test" class="page-content">
    <div class="card">
        <div class="flex justify-between items-center mb-4">
            <h3 class="text-xl font-semibold">Consultation Results</h3>
            <button id="new-consultation-btn" class="btn btn-primary">New Consultation</button>
        </div>
        <div class="table-container">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Symptoms</th>
                        <th>Result</th>
                        <th>Prescription</th>
                    </tr>
                </thead>
                <tbody id="history-table-body">
                </tbody>
            </table>
        </div>
    </div>
</div>

<div id="consultation-modal" class="modal-backdrop">
    <div class="modal-content">
        <div class="modal-header">
            <h3 id="consultation-modal-title" class="text-xl font-semibold">New Consultation</h3>
            <button id="close-consultation-modal" class="modal-close-btn">&times;</button>
        </div>
        <div id="consultation-modal-body" class="modal-body">
            <div class="consultation-content select-symptoms-content active">
                <p class="mb-2 font-semibold">Please select all symptoms you are experiencing.</p>
                <div class="searchable-dropdown" id="symptom-search-parent">
                    <input type="text" autocomplete="off" id="symptom-search-input" class="form-input" placeholder="Search for a symptom...">
                    <div id="symptom-search-list" class="searchable-dropdown-list">
                    </div>
                </div>
                <div id="selected-symptoms-container" class="selected-symptoms-container mt-2">
                    <p class="text-gray-500 selected-symtoms-message">Selected symptom will display here.</p>
                    <div class="patient-symptom hidden" id="patient-question-container">
                        <p>How long have you had <span id="question-symptom-name-holder" class="font-semibold">fever</span>?</p>
                        <div class="patient-question">
                            <input id="quest-symptom-id" value="0" type="text" hidden />
                            <input id="quest-symptom-days" value="1" type="number" placeholder="Days" class="form-input symptom-duration" />
                            <button id="quest-symptom-remove-btn" class="btn btn-sm btn-danger remove-patient-symptom-btn" data-symptom-id="0">x</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="consultation-content selected-symptoms-durations hidden">
                <div class="duration-fields" id="duration-fields"></div>
            </div>
            <div class="consultation-content diagnosis-result-content text-center hidden">
                <h4 class="text-xl font-semibold mb-2">Potential Diagnosis:</h4>
                <ul style="list-style: none; padding: 0; display: flex; flex-direction: column; gap: 0.5rem;" id="diagnosis-result-list">
                </ul>
                <p class="text-sm text-gray-500 mt-4">Disclaimer: This is a prototype and not for actual medical use. Please consult a professional.</p>
            </div>
        </div>
        <div id="consultation-modal-footer" class="modal-footer">
            <button id="next-step-btn" class="btn btn-primary diagnosis-btn" disabled>Next</button>
            <button id="review-diagnosis-btn" class="btn btn-secondary diagnosis-btn diagnosis-review-btn" disabled>Review</button>
            <button id="run-diagnosis-btn" class="btn btn-primary diagnosis-btn hidden">Run Diagnosis</button>
            <button id="finish-diagnosis-btn" class="btn btn-primary diagnosis-btn hidden">Finish</button>
        </div>
    </div>
</div>

<script src="~/features/admin/diagnosis/js/diagnosis.js" asp-append-version="true"></script>