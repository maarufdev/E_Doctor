<link rel="stylesheet" href="~/features/admin/settings/css/illness-setting.css" asp-append-version="true" />


<div class="flex justify-between gap-2 mb-4">
    <div class="flex gap-2 align-center">
        <input type="text" id="illness-search-input" autocomplete="off" class="form-input self-start search-illness" placeholder="Search illnesses...">
        <button id="illness-search-btn" class="btn btn-sm btn-secondary self-start">Search</button>
    </div>
    <div class="flex  gap-2 mb-3">
        <button id="new-disease-btn" class="btn btn-primary">Create New Illness</button>
        <button id="export-rules-btn" class="btn btn-primary">Export Rules</button>
    </div>
</div>

<div class="card">
    <div class="table-container">
        <table class="data-table">
            <thead>
                <tr>
                    <th>Illness Name</th>
                    <th>Description</th>
                    <th>Rule Count</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="diseases-table-body">
               
            </tbody>
        </table>
    </div>
    <div class="pagination-controls">
        <label style="font-weight: 500;">Page: </label>
        <select id="illness-pagination" value="2" class="form-select" style="width: auto;"></select>
    </div>
</div>

<!-- Disease Modal -->
<div id="disease-modal" class="modal-backdrop">
    <div class="modal-content">
        <div class="modal-header">
            <h3 id="disease-modal-title" class="text-xl font-semibold">Create New Illness</h3>
            <button id="close-disease-modal"class="modal-close-btn">&times;</button>
        </div>
        <div class="modal-body">
            <input type="hidden" id="editing-disease-id">
            <div style="display: flex; flex-direction: column; gap: 1rem;">
                <div>
                    <label for="disease-name-input" class="font-semibold">Illness Name</label>
                    <input type="text" id="disease-name-input" class="form-input mt-1" placeholder="e.g., Influenza" autocomplete="off">
                </div>
                <div>
                    <label for="disease-desc-input" class="font-semibold">Description</label>
                    <textarea id="disease-desc-input" class="form-textarea mt-1" placeholder="Brief description of the illness"></textarea>
                </div>
                <div>
                    <label for="disease-desc-input" class="font-semibold">Prescription</label>
                    <textarea id="disease-prescription-input" class="form-textarea mt-1" placeholder="Prescription"></textarea>
                </div>
                <div>
                    <label for="disease-desc-input" class="font-semibold">Notes/Referral</label>
                    <textarea id="disease-notes-input" class="form-textarea mt-1" placeholder="Notes"></textarea>
                </div>
                <div style="border-top: 1px solid var(--border-color); padding-top: 1rem;">
                    <h4 class="font-semibold mb-2">Rule Configuration</h4>
                    <div class="flex items-center gap-2 p-2" style="background-color: #f9fafb; border-radius: 0.375rem;">
                        <div style="flex-grow: 1;">
                            <select id="symptom-select" class="form-select mt-1"></select>
                        </div>
                        <button id="add-disease-rule-btn" class="btn btn-secondary" style="padding: 0.65rem;">Add</button>
                    </div>
                    <div id="disease-rules-container" style="display:flex; flex-direction:column; gap: 0.5rem; max-height: 12rem; overflow-y: auto; padding-right: 0.5rem; margin-bottom: 0.75rem;">

                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button id="save-disease-btn" class="btn btn-primary">Save Disease</button>
        </div>
    </div>
</div>

<script src="~/features/admin/settings/js/illness-setting.js" asp-append-version="true"></script>