<!-- Reset Password Page -->
<div class="auth-form-container reset-password" style="width: 400px;">
    <div class="auth-header">
        <h2>Reset Password</h2>
    </div>
    <form class="reset-password-form">
        <div class="form-group">
            <label for="username">Email Address/Username</label>
            <input type="text" id="username" class="form-input" autocomplete="off" />
        </div>
        <div class="form-group mb-3">
            <label for="login-password">New Password</label>
            <input type="password" id="new-password" class="form-input" autocomplete="off" />
        </div>
        <div class="form-group mb-3">
            <button id="reset-password-btn" type="submit" class="btn btn-primary mt-4">Reset Password</button>
        </div>
    </form>
    <p class="auth-link"><a asp-controller="Account" asp-action="Login" id="show-register-link">Back to Login</a></p>
</div>

<script src="~/features/user/js/reset-password.js" asp-append-version="true"></script>