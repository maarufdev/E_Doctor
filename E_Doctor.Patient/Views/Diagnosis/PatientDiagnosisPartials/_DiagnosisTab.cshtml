<link rel="stylesheet" href="~/features/patient/diagnosis/css/diagnosis.css" asp-append-version="true" />

<div class="card">
    <div class="flex justify-between flex-column gap-2 mb-4">
        <h3 class="text-xl font-semibold">Consultation Results</h3>
        <div class="flex justify-end gap-2">
            <button id="new-consultation-btn" class="btn btn-primary">New Consultation</button>
            <button id="import-rules-btn" class="btn btn-primary">Import Rules</button>
        </div>
    </div>
    <div class="table-container">
        <table class="data-table">
            <tr>
                <th>Date</th>
                <th>Symptoms</th>
                <th>Result</th>
                <th>Action</th>
            </tr>
            <tbody id="history-table-body">
            </tbody>
        </table>
    </div>
</div>


<div id="consultation-modal" class="modal-backdrop">
    <div class="modal-content">
        <div class="modal-header">
            <h3 id="consultation-modal-title" class="text-xl font-semibold">New Consultation</h3>
            <button id="close-consultation-modal" class="modal-close-btn">&times;</button>
        </div>
        <div id="consultation-modal-body" class="modal-body">
            <div class="consultation-content select-symptoms-content">
                <p class="mb-2 font-semibold">Please select all symptoms you are experiencing.</p>
                <div class="searchable-dropdown" id="symptom-search-parent">
                    <input type="text" autocomplete="off" id="symptom-search-input" class="form-input" placeholder="Search for a symptom...">
                    <div id="symptom-search-list" class="searchable-dropdown-list">
                    </div>
                </div>
                <div id="selected-symptoms-container" class="selected-symptoms-container mt-2">
                </div>
            </div>
            <div class="consultation-content selected-symptoms-durations hidden">
                <div class="duration-fields" id="duration-fields"></div>
            </div>
        </div>
        <div id="consultation-modal-footer" class="modal-footer flex">
            <div class="consultation-buttons symptoms-selection-buttons flex justify-end w-full">
                <button id="next-step-btn" class="btn btn-primary diagnosis-btn flex-end" disabled>Next</button>
            </div>
            <div class="consultation-buttons symptoms-review-buttons flex justify-between w-full hidden">
                <button id="back-diagnosis-btn" class="btn btn-secondary diagnosis-btn diagnosis-review-btn">Back</button>
                <button id="run-diagnosis-btn" class="btn btn-primary diagnosis-btn">Run Diagnosis</button>
            </div>
            <div class="consultation-buttons symptoms-result-buttons flex justify-end w-full hidden">
                <button id="finish-diagnosis-btn" class="btn btn-primary diagnosis-btn">Done</button>
            </div>
        </div>
    </div>
</div>

@* Diagnosis Result *@
<div id="diagnosis-result-modal" class="modal-backdrop">
    <div class="modal-content modal-diagnosis-content">
        <div class="modal-header">
            <h3 class="text-xl font-semibold">Diagnosis Result</h3>
            <button id="close-diagnosis-result-modal" class="modal-close-btn">&times;</button>
        </div>
        <div class="modal-body">
            <div class="diagnosis-content-card text-center">
                <p id="diagnosis-result" class="text-xl font-medium">Likely Bronchitis.</p>
                <p id="diagnosis-description" class="text-gray-500 mt-2">Your symptoms suggest bronchitis. Most cases are viral and resolve on their own, but consult a doctor if symptoms are severe.</p>
                <div class="text-left mt-4">
                    <h4 class="text-lg font-semibold text-gray-800 mb-2">Prescriptions:</h4>
                    <p id="diagnosis-prescription" class="text-gray-700">Cough suppressants, Rest, Increased fluid intake.</p>
                </div>
                <div class="text-left mt-4">
                    <h4 class="text-lg font-semibold text-gray-800 mb-2">Doctor's Note / Referral:</h4>
                    <p id="diagnosis-notes" class="text-gray-700">If your cough lasts for more than three weeks or is accompanied by a high fever, you should see a doctor.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="import-rules-modal" class="modal-backdrop">
    <div class="modal-content">
        <div class="modal-header">
            <h3 id="consultation-modal-title" class="text-xl font-semibold">Import Rules Congiguration</h3>
            <button id="close-rules-modal" class="modal-close-btn">&times;</button>
        </div>
        <div class="modal-body">
            <input type="file" accept=".json" autocomplete="off" id="import-rule-config-input" class="form-input" placeholder="Select File">
        </div>
        <div class="modal-footer">
            <button id="save-rules-config" class="btn btn-primary">Save Rules Configuration</button>
        </div>
    </div>
</div>

<script src="~/features/patient/diagnosis/js/diagnosis.js" asp-append-version="true"></script>