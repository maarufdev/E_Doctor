<link rel="stylesheet" href="~/features/patient/consultation/css/consultation.css" asp-append-version="true" />

<div class="flex gap-2 flex-column w-full consultation-content text-center">
    <div class="consultaiont-card flex flex-column gap-2">
        <h1 class="font-bold consulation-title">Start a New Consultation</h1>
        <p>
            Please click the button below to begin the symptom assessment
        </p>
    </div>
    <button class="btn btn-primary start-new-diagnosis-btn" id="start-consultation-btn">Start New Consultation</button>
</div>

<div id="illness-modal" class="modal-backdrop">
    <div class="modal-content modal-illness-content">
        <div class="modal-header">
            <h3 class="text-sm font-semibold">Select an Illness</h3>
            <button class="modal-close-btn" id="close-illness-modal-btn">&times;</button>
        </div>
        <div class="modal-body">
            <div class="illness-content">
                <div>
                    <input id="search-illness-txt" class="form-input" type="text" placeholder="Search illness" autocomplete="off" />
                </div>
                <div class="illness-list" id="illness-list">
                    <button class="btn illness-item-btn" data-illness-id="1">Anxiety Disorder</button>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="symptoms-modal" class="modal-backdrop">
    <div class="modal-content modal-symptom-content">
        <div class="modal-header">
            <h3 class="text-sm" id="symptoms-modal-title">New Consultation</h3>
            <button class="modal-close-btn" id="close-symptom-selection-symptom-btn">&times;</button>
        </div>
        <div class="modal-body">
            <div class="symptoms-content" id="symptom-question-content">
                <div class="search-container">
                    <input class="form-input" type="text" id="search-symptoms" placeholder="Search symptoms..." />

                </div>
                <div class="symptoms-checklist-title-container">
                    <p>Do you have a:</p>
                </div>
                <div class="symptoms-checklist-container">
                    <ul class="symptoms-list">
                        <li class="symptom-item">
                            <div class="custom-checkbox">
                                <input type="checkbox"
                                       id="symptom-1"
                                       class="custom-checkbox-input form-checkbox"
                                       />
                                <label for="symptom-1" class="custom-checkbox-label">Diabetes</label>
                            </div>
                        </li> 
                        <li class="symptom-item">
                            <div class="custom-checkbox">
                                <input type="checkbox"
                                       id="symptom-2"
                                       class="custom-checkbox-input form-checkbox" />
                                <label for="symptom-2" class="custom-checkbox-label">This is a very long text.</label>
                            </div>
                        </li>
                        <li class="symptom-item">
                            <div class="custom-checkbox">
                                <input type="checkbox"
                                       id="symptom-3"
                                       class="custom-checkbox-input form-checkbox" />
                                <label for="symptom-3" class="custom-checkbox-label">This is a very long text.</label>
                            </div>
                        </li>
                        <li class="symptom-item">
                            <div class="custom-checkbox">
                                <input type="checkbox"
                                       id="symptom-4"
                                       class="custom-checkbox-input form-checkbox" />
                                <label for="symptom-4" class="custom-checkbox-label">Diabetes</label>
                            </div>
                        </li>
                        <li class="symptom-item">
                            <div class="custom-checkbox">
                                <input type="checkbox"
                                       id="symptom-5"
                                       class="custom-checkbox-input form-checkbox" />
                                <label for="symptom-5" class="custom-checkbox-label">This is a very long text.</label>
                            </div>
                        </li>
                        <li class="symptom-item">
                            <div class="custom-checkbox">
                                <input type="checkbox"
                                       id="symptom-6"
                                       class="custom-checkbox-input form-checkbox" />
                                <label for="symptom-6" class="custom-checkbox-label">This is a very long text.</label>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <div class="symptom-footer-buttons">
                <button class="btn cancel-symptom-btn" id="cancel-diagnosis">Cancel Diagnosis</button>
                <button class="btn btn-primary get-diagnosis-button question-btn" id="quest-get-diagnosis-btn">Run Diagnosis</button>
            </div>
        </div>
    </div>
</div>

<div id="diagnosis-result-modal" class="modal-backdrop">
    <div class="modal-content modal-diagnosis-content">
        <div class="modal-header">
            <h3 class="text-sm font-semibold">Consultation Result</h3>
            <button class="modal-close-btn" id="close-result-modal-btn">&times;</button>
        </div>
        <div class="modal-body">
            <div class="diagnosis-content-card">
                <div class="diagnosis-illnes-section">
                    <h1 id="diagnosis-result">Cold</h1>
                </div>
                <div class="patient-symptoms-section">
                    <span class="symptoms-section-label">PATIENT SYMPTOMS</span>
                    <ul class="patient-symptoms-list">
                    </ul>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <div class="flex mt-2 justify-center">
                <button class="btn btn-primary start-new-diagnosis-btn start-diagnosis-modal-btn" id="start-diagnosis-modal-btn">Get New Diagnosis</button>
            </div>
        </div>
    </div>
</div>

<script src="~/features/patient/consultation/js/consultation.js" asp-append-version="true"></script>